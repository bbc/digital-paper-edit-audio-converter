  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "test": "mocha",
    "lint": "eslint .",
    "spec": "speculate --release ${BUILD_NUMBER}"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bbc/digital-paper-edit-audio-converter.git"
  },
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "@bbc/convert-to-audio": "^1.0.0",
    "body-parser": "^1.19.0",
    "config": "^3.0.1",
    "express": "^4.16.4",
    "ffmpeg-static-electron": "^2.0.1",
    "fluent-ffmpeg": "^2.1.2",
    "lodash": "^4.17.13",
    "speculate": "^2.0.0",
    "sqs-consumer": "^5.3.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^4.6.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-mocha": "^4.11.0",
    "mocha": "^6.1.4",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2"
  },
  "spec": {
    "requires": [
      "cloud-httpd24-ssl-no-certs"
